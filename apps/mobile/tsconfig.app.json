{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "paths": {
      "~/*": ["apps/mobile/src/*"],
      "@reelist/models/*": ["libs/models/src/lib/*"],
      "@reelist/utils/*": ["libs/utils/src/lib/*"],
      "@reelist/apis/*": ["libs/apis/src/lib/*"],
    },
    "composite": true,
    "noEmit": false
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.spec.tsx", "test-setup.ts"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "../../libs/**/*.ts"]
}
