{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server",
  "projectType": "application",
  "targets": {
    "prep-dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./apps/server/",
        "command": "cp envs/.env.development.local .env.local"
      }
    },
    "prep-stage": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./apps/server/",
        "command": "cp envs/.env.staging.local .env.local"
      }
    },
    "prep-prod": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./apps/server/",
        "command": "cp envs/.env.production.local .env.local"
      }
    },
    "deploy-prod": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./apps/server/",
        "command": [
          "cp envs/.env.production.local .env.local",
          "node scripts/docker/deploy.mjs"
        ],
        "parallel": false
      }
    },
    "deploy-prod-local": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./apps/server/",
        "command": [
          "cp envs/.env.staging.local .env.local",
          "node scripts/docker/deploy_local.mjs"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/server",
        "outputPath": "dist/apps/server"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/server"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "server:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "server:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "server:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "server:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/server"],
      "options": {
        "jestConfig": "apps/server/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/server/**/*.{ts,tsx,js,jsx}"],
        "fix": true
      }
    }
  },
  "tags": []
}
